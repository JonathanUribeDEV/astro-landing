---
import projects from "../../data/projects.json"
--- 

<section>
    <h1 class="font-bold text-5xl py-4 text-center">Projects</h1>

    {
        projects.map((project) =>
            <div class="flex text-center md:text-left">
                <div class="flex-1">
                    <h2 class="font-bold text-2xl my-4">{project.title}</h2>    
                    <p>{project.about}</p>
                    
                    <button class="bg-indigo-700 my-3 px-3 py-2 rounded-xl hover:bg-indigo-400">
                        More Info
                    </button>
                </div>
                <div class="flex-1">
                    <img class="w-72 m-auto" src="/public/images/fingerprint.svg" alt="">
                </div>
            </div>
        )
    }

</section>
